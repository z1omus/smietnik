"scripts":{
"build": "tsc",
"start": "tsc-node src/index.ts"
// po przecinku możemy dodawać ile chcemy odprowadzeń do nazw, które aktywujemy w konsoli: npm run nazwa
}*/
//1. typy danych- jesteśmy w ts
let message:string = "Hello ts";
console.log(message);
message = "Wtaj w ts";
console.log(message);
message = 10;// błąd- nie może być


const pi= 3.14;
console.log(pi);
pi = 3.1415926;// błąd- nie można zmienić wartości const

let age:number =28;
let userName = "Michał";
username = 23// niejawnie stwierdziło, ze będzie to string i również będzie błąd
let isLoggedOut: boolean = false;

let cars: string[]=["subaru", "porsche", "bmw"]//mogą byc tylko stringi
let fruits: (string|number)[] = ["apple", "banana", "orange", 10];//może być string lub number

//obiekty w ts
const point = {x:11, y: 22};
const points: {x: number, y: number} = {x: 1, y: 2};

const point = {x:11, y: 22};
const points: {x: number, y: number} = {x: 1, y: 2};
console.log(point)
point.x = -978
console.log(point)
point = {x: 11, y: 12};
//przy const można zmieniać poszczególne fragmenty, a nie cały obiekt, bo można zmieniać zawartość, a nie wolno referencji, bo const dotyczy referencji

let point = {x:11, y: 22};
console.log(point)
point.x = -978
console.log(point)
point = {x: 12, y: 19};
console.log(point)

const boys: string[] = ["Bolek", "Lolek"]
boys.push("Tola")
boys[0] = "Super Bolek"
console.log(boys)



