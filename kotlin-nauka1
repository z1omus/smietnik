//ksiazki w bibliotece
fun main(){
var booksList= mutableListOf<String>()
var authorsList- mutableListOf<String>()

do{
println("1. dodaj książkę")
println("4. zakończ")
var usersChoice: String = readLine()!!
when(usersChoice){
  "1"->{
    println("podaj tytuł")
    var title:String = readLine()!!
    println("podaj autora")
    var author:String = readLine()!!
    addBook(title, booksList, author, authorsList)
    }
    "2"->{
    showAll(booksList, authorsList)
  }
    "3"->{
    sumAll(booksList)
  }
}


}while(usersChoice!="4")

}
fun addBook(title: String, booksList: mutableList<String>, author: String, authorsList: mutableList<String>){
booksList.add(name)
}
fun showAll(list: mutableList<String>, author: mutableList<String>){
for(book in list){
  println("${list.indexOf(book)+1}. $book. ${author[list.indexOf(book)]}")
}
}
fun sumAll(list: String){
println("biblioteka ma $list.size książek")
}
//to do list
fun main(){
var toDo = mutableListOf<String>()
var done = mutableListOf<Boolean>()
do{
println("1. dodaj zadanie")
println("2. zakończ zadanie")
println("3. wszystkie zadania")
println("4. ile do zrobienia")
println("5. Zakończ")
var usersChoice:String = readLine()!!
when(usersChoice){
  "1"->{
    println("dodaj zadanie")
    var task: String= readLine()!!
    addTask(task, toDo, done)
  }
  "2"->{
    showAll(toDo, done)
    println("które zadanie chcesz zakończyć?")
    var number: Int = readLine().toInt()!!
    changeMode(number, done)
  }
  "3"->{
    showAll(toDo, done)
  }

}
}while(usersChoice!="5")
}
fun addTask(task: String, toDo: MutableList<String>, done: MutableList<Boolean>){
toDo.add(task)
done.add(false)
}
fun changeMode(num: Int, unDone: MutableList<Boolean>){
unDone[num-1] = true
}
fun showAll(toDo: MutableList<String>, done: MutableList<Boolean>){
for(tasks in toDo){
print("${toDo.indexOf(tasks)+1}. $tasks. ${done[toDo.indexOf(tasks)]}") 
}
}




