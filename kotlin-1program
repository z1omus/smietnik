package com.example.klasowka

fun main(){
    var productsList = mutableListOf<String>()
    var productsPrice = mutableListOf<Int>()

    do{
    println("Menu")
    println("--------")
    println("1. dodaj produkt")
    println("2. wyświetl produkty")
    println("3. Pokaż łączną wartość")
    println("4. zakończ")
    print("Wybierz opcję: ")
    var userChoice: String? = readLine()
        when (userChoice){
            "1"-> {
                print("Podaj nazwę produktu: ")
                var nameProduct: String = readLine()!!
                addProduct(nameProduct, productsList)
                print("Podaj cenę produktu: ")
                var productPrice: Int = readLine()?.toInt() ?: 0
                addPrice(price = productPrice, productsPrice)
            }
            "2"->{
                showAllProduct(productsList, productsPrice)
            }
            "3"->{
                for(int i=0; i<productsPrice; )
            }

        }


        /*if(userChoice == "1"){
            print("Podaj nazwę produktu: ")
            var nameProduct: String = readLine()!!
            addProduct(nameProduct, productsList)
            }

        else if(userChoice == "2"){
            showAllProduct(productsList)
        }
        else if(userChoice == "3"){
            var productPrice: Int = readLine()?.toInt() ?: 0
            addPrice(price = productPrice)
        }*/
        } while (userChoice != "4")
}

fun addPrice(price: Int, priceList: MutableList<Int>) {

    priceList.add(price)
}

fun showAllProduct(list: MutableList<String>, priceList: MutableList<Int>) {
    println("Produkty w sklepie: ")
    for(product in list)
        println("${list.indexOf(product)+1}. $product, ${priceList[list.indexOf(product)]}")
}

fun addProduct(name: String, list: MutableList<String>) {
    list.add(name)
}
